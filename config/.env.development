# ============================================================================
# üîß Development Environment Configuration
# ============================================================================
# This file is optimized for local development with debugging enabled

# ============================================================================
# üåç ENVIRONMENT CONFIGURATION
# ============================================================================

ENVIRONMENT=development
DEBUG=true
TIMEZONE=UTC

# ============================================================================
# üîß REQUIRED CONFIGURATION
# ============================================================================

# Get these from Telegram or use test values
BOT_TOKEN=YOUR_DEV_BOT_TOKEN
ADMIN_USER_IDS=YOUR_TELEGRAM_USER_ID
SECURITY_ADMIN_TOKEN=dev_token_not_for_production

# ============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================================================

# SQLite for development
DATABASE_URL=sqlite+aiosqlite:///./data/dev_bot.db

# Development database settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_POOL_PRE_PING=true
DB_ECHO=true  # Enable SQL logging in development

# ============================================================================
# üî¥ REDIS CONFIGURATION
# ============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=60
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ============================================================================
# üåê SERVER CONFIGURATION
# ============================================================================

# Local development server
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
SERVER_WORKERS=1

# Development logging
LOG_LEVEL=DEBUG
ACCESS_LOG=false

# ============================================================================
# üîí SECURITY CONFIGURATION
# ============================================================================

# Relaxed security for development
RATE_LIMIT_ENABLED=false
REQUEST_TIMEOUT=60

# ============================================================================
# üìä MONITORING & HEALTH CHECKS
# ============================================================================

# Disable health checks in development
HEALTH_CHECK_ENABLED=false
METRICS_ENABLED=false
LOG_TO_FILE=false

# ============================================================================
# üè† DASHBOARD CONFIGURATION
# ============================================================================

# Enable dashboard for development
DASHBOARD_ENABLED=true
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8000
DASHBOARD_ADMIN_TOKEN=dev_token_not_for_production

# ============================================================================
# üèÜ BOT FUNCTIONALITY SETTINGS
# ============================================================================

LEADERBOARD_SIZE=5  # Smaller for development
AUTODELETE_ENABLED=false  # Disable auto-delete in development
GROUP_MESSAGE_RETENTION_MINUTES=10
TEXT_ONLY_MODE=false

# Development bot settings
BOT_NAME="Ingress Bot (DEV)"
BOT_DESCRIPTION="Development version of Ingress Prime Leaderboard Bot"

# ============================================================================
# üíæ BACKUP CONFIGURATION
# ============================================================================

BACKUP_ENABLED=false

# ============================================================================
# ‚ö° PERFORMANCE SETTINGS
# ============================================================================

CACHE_TTL_SECONDS=60  # Shorter cache for development
MAX_RETRIES=1  # Faster failure in development
RETRY_DELAY=0.5