# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
BOT_NAME=Ingress Prime Leaderboard

# Admin Configuration
# Comma-separated list of Telegram user IDs for bot administrators
ADMIN_USER_IDS=YOUR_ADMIN_USER_ID_HERE

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Redis Configuration
# Redis connection string
# Format: redis://username:password@hostname:port
REDIS_URL=redis://username:password@hostname:port

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO

# Environment Settings
ENVIRONMENT=production
DEBUG=false
TIMEZONE=UTC

# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8095
DASHBOARD_ADMIN_TOKEN=YOUR_SECURE_DASHBOARD_TOKEN_HERE

# Bot Settings
AUTODELETE_ENABLED=true
AUTODELETE_DELAY_SECONDS=300
LEADERBOARD_SIZE=10
GROUP_MESSAGE_RETENTION_MINUTES=60
TEXT_ONLY_MODE=false

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_RCLONE_REMOTE=
BACKUP_DESTINATION_PATH=ingress-bot-backups
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_COUNT=7
BACKUP_COMPRESS=true

# Redis Configuration (Advanced)
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Database Configuration (Advanced)
DB_POOL_PRE_PING=true

# Performance Tuning
BOT_MESSAGE_CLEANUP_MINUTES=5
HEALTH_CHECK_INTERVAL_MINUTES=5