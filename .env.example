# ============================================================================
# üèÜ LEADERBOARD SETTINGS
# ============================================================================

# Number of agents to show in leaderboard
LEADERBOARD_SIZE=10

# ============================================================================
# üì± GROUP CHAT SETTINGS
# ============================================================================

# Auto-delete settings for group chats
AUTODELETE_ENABLED=true
AUTODELETE_DELAY_SECONDS=300
GROUP_MESSAGE_RETENTION_MINUTES=60

# Performance mode for older devices
TEXT_ONLY_MODE=false

# ============================================================================
# üìä DASHBOARD SETTINGS
# ============================================================================

# Web dashboard for statistics and monitoring
DASHBOARD_ENABLED=true
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8085

# Dashboard admin token (generate a secure random string)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
DASHBOARD_ADMIN_TOKEN=YOUR_SECURE_TOKEN_HERE

# ============================================================================
# üíæ BACKUP SETTINGS
# ============================================================================

# Backup system (requires rclone setup)
BACKUP_ENABLED=false
BACKUP_RCLONE_REMOTE=
BACKUP_DESTINATION_PATH=ingress-bot-backups
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_COUNT=7
BACKUP_COMPRESS=true

# ============================================================================
# üåê OPTIONAL ADVANCED SETTINGS
# ============================================================================

# Bot display name and description (optional)
BOT_NAME=Ingress Prime Leaderboard
BOT_DESCRIPTION=Track your Ingress Prime stats and compete with other agents!

# Timezone for scheduling (default: UTC)
TIMEZONE=UTC

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Rate limiting (messages per minute per user)
RATE_LIMIT=30